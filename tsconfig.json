{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist/src",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@filters": ["src/filters"],
      "@filters/*": ["src/filters/*"],
      "@config.json": ["src/config/config.json"],
      "@config/*": ["src/config/*"],
      "@configBuilder": ["src/config/config-builder"],
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants"],
      "@server/*": ["src/server/*"],
      "@server": ["src/server"],
      "@ssps/*": ["src/ssps/*"],
      "@ssps": ["src/ssps"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@fixtures/*": ["test/fixtures/*"],
      "@mocks/*": ["test/mocks/*"],
      "@utils.test/*": ["test/utils/*"]
    },
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "test/**/*"]
}